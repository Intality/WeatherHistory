<Window x:Class="WeatherHistory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WeatherApp"
        Height="520" Width="640"
        Background="#20252b">

    <Grid Background="#20252b">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Menu -->
            <RowDefinition Height="Auto"/>
            <!-- Top row -->
            <RowDefinition Height="Auto"/>
            <!-- Info -->
            <RowDefinition Height="*"/>
            <!-- Animation -->
        </Grid.RowDefinitions>

        <!-- MENU BAR -->
        <Menu Grid.Row="0"
              Background="#3b3f46"
              Foreground="White"
              FontSize="14"
              Padding="6">

            <Menu.Resources>
                <Style TargetType="MenuItem">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Background" Value="#3b3f46"/>
                    <Setter Property="Padding" Value="6,4"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#4a4f58"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Menu.Resources>

            <MenuItem Header="File">
                <MenuItem Header="Exit" Click="Exit_Click"/>
            </MenuItem>

            <MenuItem Header="Help">
                <MenuItem Header="Version History" Click="VersionHistory_Click"/>
            </MenuItem>

            <!-- DEV MENU -->
            <MenuItem Header="Dev">
                <MenuItem Header="Force Clear" Click="DevForceClear_Click"/>
                <MenuItem Header="Force Cloud" Click="DevForceCloud_Click"/>
                <MenuItem Header="Force Rain" Click="DevForceRain_Click"/>
                <MenuItem Header="Force Snow" Click="DevForceSnow_Click"/>
                <MenuItem Header="Force Storm" Click="DevForceStorm_Click"/>
            </MenuItem>
        </Menu>

        <!-- TOP ROW -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="10">
            <TextBlock Text="Date:" Foreground="White" Margin="0,0,10,0"/>
            <DatePicker x:Name="DateBox" Width="160" Margin="0,0,10,0"/>
            <Button x:Name="FetchButton" Content="Fetch" Width="90"
                    Padding="6,2" Click="FetchWeather_Click"/>
        </StackPanel>

        <!-- STATUS + DETAILS -->
        <StackPanel Grid.Row="2" Margin="10">
            <TextBlock x:Name="StatusText"
                       Foreground="White"
                       FontSize="14"
                       Text="Select a date and click Fetch." />
            <TextBlock x:Name="DetailsText"
                       Foreground="LightGray"
                       TextWrapping="Wrap"
                       FontSize="12"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- BACKGROUND + ANIMATION -->
        <Border Grid.Row="3"
                Margin="10"
                BorderBrush="#444"
                BorderThickness="2"
                CornerRadius="6"
                ClipToBounds="True">

            <Grid>
                <Image Source="Assets/foco.png"
                       Stretch="Fill"
                       x:Name="BackgroundImage"
                       Panel.ZIndex="0" />

                <Canvas x:Name="AnimationCanvas"
                        Width="480"
                        Height="240"
                        Background="Transparent"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Panel.ZIndex="1"/>
            </Grid>
        </Border>

    </Grid>
</Window>
